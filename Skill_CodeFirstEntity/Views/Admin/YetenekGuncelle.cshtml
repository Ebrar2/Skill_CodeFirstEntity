@model Skill_CodeFirstEntity.Models.siniflar.Yetenekler
@{
    ViewBag.Title = "YetenekGuncelle";
    Layout = "~/Views/Shared/_LayoutNavbar.cshtml";
}

<h2>YetenekGuncelle</h2>


<form class="form-group" method="post">
    <div style="margin-bottom:20px">
        <label>
            Yetenek Açıklama
        </label>
        @Html.TextBoxFor(x => x.Aciklama, new { @class = "form_control" })
    </div>
    <div style="margin-bottom:20px">
        <label>Yetenek Değeri</label>
        @Html.TextBoxFor(x => x.Deger, new { @class = "form_control" })
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
</form>